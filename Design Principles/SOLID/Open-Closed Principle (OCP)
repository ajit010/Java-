// Bad Example: A class that needs modification to add new functionality
class Shape {
    void drawCircle() { /* logic to draw circle */ }
    void drawSquare() { /* logic to draw square */ }
}

// Good Example: Extend functionality without modifying the existing code
abstract class Shape {
    abstract void draw();
}

class Circle extends Shape {
    void draw() { /* logic to draw circle */ }
}

class Square extends Shape {
    void draw() { /* logic to draw square */ }
}
